<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@drawable/main_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/main_background"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7">
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.6"
                android:orientation="vertical"
                android:weightSum="4">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.6">
                    <LinearLayout
                        android:id="@+id/linearLayout_menuIncomeincome"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/menu_income_expense"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:elevation="50dp"
                        >
                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/button_expenditure"
                            android:layout_margin="5dp"
                            android:scaleType="centerInside"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:elevation="100dp"
                            android:contentDescription="Button to view income"
                            />
                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/button_income_purple"
                            android:layout_margin="5dp"
                            android:scaleType="centerInside"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:elevation="100dp"
                            android:contentDescription="Button to view income"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_datetime"
                    android:text="Datetime"
                    android:fontFamily="@font/sf_pro_text_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:textSize="16sp"
                    android:textColor="@color/black_blue"
                    >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_note"
                    android:text="Note"
                    android:fontFamily="@font/sf_pro_text_bold"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/textview_datetime"
                    app:layout_constraintLeft_toLeftOf="@id/textview_datetime"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black_blue"
                    >
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_income"
                    android:text="Income"
                    android:fontFamily="@font/sf_pro_text_bold"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@id/textview_datetime"
                    app:layout_constraintTop_toBottomOf="@+id/textview_note"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black_blue"
                    >
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_category"
                    android:text="Category"
                    android:fontFamily="@font/sf_pro_text_bold"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@id/textview_datetime"
                    app:layout_constraintTop_toBottomOf="@id/textview_income"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black_blue"
                    >
                </TextView>
                <ImageButton
                    android:id="@+id/left_forward"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_left_forward"
                    android:scaleType="fitCenter"
                    app:layout_constraintLeft_toRightOf="@id/textview_datetime"
                    app:layout_constraintTop_toTopOf="@id/textview_datetime"
                    app:layout_constraintBottom_toBottomOf="@id/textview_datetime"
                    android:layout_marginLeft="15dp"
                    android:contentDescription="Button left forward"
                    >
                </ImageButton>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_datetime_detail"
                    android:text="Monday, 26/08/2023"
                    android:fontFamily="@font/sf_pro_text_bold"
                    android:textSize="16sp"
                    android:textColor="@color/black_blue"
                    app:layout_constraintLeft_toRightOf="@id/left_forward"
                    app:layout_constraintRight_toLeftOf="@id/right_forward"
                    app:layout_constraintTop_toTopOf="@id/left_forward"
                    app:layout_constraintBottom_toBottomOf="@id/left_forward"
                    >
                </TextView>

                <ImageButton
                    android:id="@+id/right_forward"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_right_forward"
                    android:scaleType="fitCenter"
                    app:layout_constraintTop_toTopOf="@id/left_forward"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/left_forward"
                    android:layout_marginRight="25dp"
                    android:contentDescription="Button right forward"
                    >
                </ImageButton>
                <ImageButton
                    android:id="@+id/pencil"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_pencil"
                    android:scaleType="fitCenter"
                    app:layout_constraintRight_toRightOf="@id/right_forward"
                    app:layout_constraintTop_toTopOf="@id/textview_category"
                    app:layout_constraintBottom_toBottomOf="@id/textview_category"
                    app:layout_constraintLeft_toLeftOf="@id/right_forward"
                    android:contentDescription="Button pencil"
                    >
                </ImageButton>
                <EditText
                    android:id="@+id/edittext_note"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/edittext_income"
                    app:layout_constraintLeft_toLeftOf="@id/left_forward"
                    app:layout_constraintTop_toTopOf="@+id/textview_note"
                    app:layout_constraintBottom_toBottomOf="@id/textview_note"
                    app:layout_constraintRight_toRightOf="@id/right_forward"
                    android:textColor="@color/black_blue"
                    >
                </EditText>
                <TextView
                    android:id="@+id/textview_VND"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:textColor="@color/blue"
                    android:text="VNÄ"
                    android:textSize="16sp"
                    app:layout_constraintRight_toRightOf="@+id/right_forward"
                    app:layout_constraintTop_toTopOf="@id/textview_income"
                    app:layout_constraintBottom_toBottomOf="@id/textview_income"
                    >
                </TextView>

                <EditText
                    android:id="@+id/edittext_income"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/edittext_income"
                    app:layout_constraintTop_toTopOf="@id/textview_income"
                    app:layout_constraintBottom_toBottomOf="@id/textview_income"
                    app:layout_constraintLeft_toLeftOf="@id/left_forward"
                    app:layout_constraintRight_toLeftOf="@id/textview_VND"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black_blue"
                    >
                </EditText>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5.2"
            android:orientation="horizontal"
            android:weightSum="4">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/button_salary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_salary"
                    android:contentDescription="Button to view salary"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    >
                </ImageButton>
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/button_freelancer"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_freelancer"
                    app:layout_constraintTop_toBottomOf="@+id/button_salary"
                    app:layout_constraintRight_toRightOf="@id/button_salary"
                    app:layout_constraintLeft_toLeftOf="@id/button_salary"
                    android:contentDescription="Button to view freelancer"
                    >
                </ImageButton>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/button_benefit"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_benefit"
                    android:contentDescription="Button to view benefit"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    >
                </ImageButton>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/button_invest"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_invest"
                    android:contentDescription="Button to view invest"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    >
                </ImageButton>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/button_bonus"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_bonus"
                    android:contentDescription="Button to view bonus"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    >
                </ImageButton>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_import"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.454"
                    android:contentDescription="Button to import"
                    >
                </ImageButton>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <include layout="@layout/footer"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>